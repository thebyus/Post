<h4>HTML Form</h4>
<form action='/posts' method = 'post'>
	Title:<input type = "text" name="title">
	<br>
	URL: <input type="text" name="url">
	<br>
	<input type ='submit' value= "Create Post" class = 'btn btn-success'>
</form>

<h4>Rails Form Helpers</h4>
<%= form_tag '/posts' do %>
	<%= label_tag :title %>
	<%= text_field_tag :title %>
	<br>
	<%= label_tag :url %>
	<%= text_field_tag :url %>
	<br>
	<%= submit_tag "Create Post", class: 'btn btn-success' %>
<% end %>

<h4>Model Backed Forms</h4>
<%= render 'shared/errors', obj: @post %>

<%= form_for @post do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<br>
	<%= f.label :URL %>
	<%= f.text_field :url %>

	<br>
	<%= f.submit "Create Post", class: 'btn btn-success' %>
<% end %>
