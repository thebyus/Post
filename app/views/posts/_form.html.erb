<%= render 'shared/errors', obj: @post %>

<%= form_for @post do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<br>
	<%= f.label :URL %>
	<%= f.text_field :url %>
	<br>
	<%= f.label :description %>
	<%= f.text_area :description %>

	<br>
	<%= f.submit (@post.new_record? ? "Create Post" : "Update Post"), class: 'btn btn-success' %>
<% end %>
